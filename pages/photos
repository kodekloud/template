                    <li><a href="/leasing">Leasing</a> </li>
                    <li class="active">Photos</li>
               </ul>
          </section>
          <section class="portfolio_strict" id="photo_container">
                <div class="row isotope_portfolio_container">
                    <script id="photo_template" type="x-tmpl-mustache/text">
                        <div class="cat_travel col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            <div class="portfolio_item wow animated flipInX" style="height:230px"> 
                                <a href="{{alt_url}}" target="_blank" data-path-hover="M 180,190 0,158 0,0 180,0 z">
                                    <figure style="background-image:url({{alt_url}})">
                                        <svg viewBox="0 0 180 320" preserveAspectRatio="none">
                                            <path d="M 180,0 0,0 0,0 180,0 z"/>
                                        </svg>
                                        <figcaption>
                                            <p>{{description}}</p>
                                            <div class="view_button">View</div>
                                        </figcaption>
                                    </figure>
                                </a>
                             </div>
                        </div>
                    </script>
               </div>
